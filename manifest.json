{
  "manifest_version": 3,
  "name": "QR-From-Selection",
  "version": "1.0",
  "description": "Enable right click on all websites and generate QR codes from selected text.",
  "permissions": ["contextMenus", "scripting", "activeTab", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
